@model VidlyMVC.Models.ViewModels.CustomerViewModel;
@{
    ViewData["Title"] = "Edição de Cliente";
}

<div class="container">
    <hr />
    <h2>@ViewData["Title"]</h2>
    <hr />
    @using (Html.BeginForm("Edit", "Customers"))
    {
<div class="row g-3">
    <div class="form-group col-md-12">
        <label asp-for="Customer.Name" class="control-label"></label>
        <input asp-for="Customer.Name" class="form-control" type="text" placeholder="Nome" />
        <span asp-validation-for="Customer.Name" class="text-danger"></span>
        <p></p>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="Customer.Birthdate" class="control-label"></label>
        <input asp-for="Customer.Birthdate" class="form-control" type="date" placeholder="Birthdate" data-bs-toggle="tooltip" data-bs-placement="top" title="Birthdate" />
        <p></p>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Customer.MembershipType" class="control-label"></label>
        <select asp-for="Customer.MembershipTypeId" asp-items="@(new SelectList(Model.MembershipType,"Id","Name"))" class="form-select">
            <option>Selecione o Programa de Fidelidade</option>
        </select>
        <p></p>
    </div>
    <div class="col-md-12">
        <div class="form-check form-switch">
            <input asp-for="Customer.IsSubscribedToNewsletter" class="form-check-input" type="checkbox" />
            <label asp-for="Customer.IsSubscribedToNewsletter" class="form-check-label"></label>
        </div>
    </div>
    <div class="col-md-12">
        <p class="lead">
            <button type="submit" class="btn btn-success">Salvar</button>
            <a class="btn btn-warning" role="button" asp-action="Index">Cancelar</a>
        </p>
    </div>
    <input type="hidden" asp-for="Customer.Id" />
</div>
    }
</div>

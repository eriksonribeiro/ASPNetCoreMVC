@model IEnumerable<VidlyMVC.Models.Movie>
@{
    ViewData["Title"] = "Filmes";
}

<div class="container">
    <hr />
    <h2>@ViewData["Title"]</h2>
    <hr />
    <p class="lead">
        <a role="button" class="btn btn-success" asp-action="Create">Incluir</a>
    </p>

    @if (!Model.Any())
    {
        <p class="lead">We don't have any movie registered yet!</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-primary">
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Genre.Name)
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Genre.Name)
                        </td>
                        <td>
                            <a role="button" class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalhar</a>
                            <a role="button" class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a role="button" class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
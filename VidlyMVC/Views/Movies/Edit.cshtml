@model VidlyMVC.Models.ViewModels.MovieViewModel;
@{
    ViewData["Title"] = "Edição de Filme";
}

<div class="container">
    <hr />
    <h2>@ViewData["Title"]</h2>
    <hr />
    @using (Html.BeginForm("Edit", "Movies"))
    {
<div class="row g-3">
    <div class="form-group col-md-12">
        <label asp-for="Movie.Name" class="control-label"></label>
        <input asp-for="Movie.Name" class="form-control" type="text" placeholder="Nome" />
        <span asp-validation-for="Movie.Name" class="text-danger"></span>
        <p></p>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Movie.Stock" class="form-check-label"></label>
        <input asp-for="Movie.Stock" class="form-control" />
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Movie.Genre" class="control-label"></label>
        <select asp-for="Movie.GenreId" asp-items="@(new SelectList(Model.Genre,"Id","Name"))" class="form-select">
            <option>Selecione o Genêro</option>
        </select>
        <p></p>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="Movie.ReleaseDate" class="control-label"></label>
        <input asp-for="Movie.ReleaseDate" class="form-control" type="date" placeholder="Data de Lançamento" data-bs-toggle="tooltip" data-bs-placement="top" title="Data de Lançamento" />
        <p></p>
    </div>
    <div class="col-md-12">
        <p class="lead">
            <button type="submit" class="btn btn-success">Salvar</button>
            <a class="btn btn-warning" role="button" asp-action="Index">Cancelar</a>
        </p>
    </div>
    <input type="hidden" asp-for="Movie.Id" />
</div>
    }
</div>